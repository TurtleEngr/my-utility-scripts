#!/bin/bash -x
# $Id: init-sys-ver,v 1.9 2024/11/08 02:02:34 bruce Exp $
# Use this script the first time a server is setup.  It will put the
# most common config and other server files under version control.

# Tuned for MX Linux distribution

cd /
if [ ! -d CVS ]; then
    echo "You need to create the top CVS directory."
    exit 1
fi

echo >>/etc/CHANGES.org

# First level
cvs add etc
cvs add usr
cvs add var

# Second level
export i
cd /etc
for i in \
    apt \
    bash_completion.d \
    cron.* \
    default \
    init.d \
    logrotate.d \
    profile.d \
    sudoers.d \
    sysconfig \
    ufw \
    ; do
    if [ -d $i ]; then
        cvs add $i
        sleep 0.5
        cd $i
        cvs add $(find * -prune -type f)
        sleep 0.5
        cd -
    fi
done

cd /etc/apt
cvs add sources.list.d
cd sources.list.d
cvs add $(find * -prune -type f)

tListFile=''
cd etc
for i in \
    *.conf \
    *.config \
    crontab \
    CHANGES \
    bash.* \
    bash_completion \
    debian_version \
    exports \
    fstab \
    group \
    gshadow \
    host* \
    inittab \
    initrd-release \
    issue \
    issue \
    issue.net \
    issue.net \
    lsb-release \
    motd \
    mx-version \
    my.cnf \
    os-release \
    passwd \
    profile \
    rc.local \
    rc.shutdown \
    services \
    shadow \
    shells \
    ; do
    if [ -f $i ]; then
        cvs add $i
    fi
done
sleep 1

cd /etc
cvs add ssh
cd /etc/ssh
for i in \
    ssh-banner \
    *config*; do
    if [ -f $i ]; then
        tListFile="$tListFile $i"
    fi
done
cvs add $tListFile

cd /etc/ufw
cvs add applications.d
cd applications.d
cvs add $(find * -prune -type f)

cd /usr
cvs add local
cd local
cvs add bin
cd bin
cvs add $(find * -prune -type f)

cd /var
cvs add log spool
#cd /var/spool
#cvs add $(find * -prune -type f)



#wgetrc
#speech-dispatcher
#smartmontools
#skel
#nfs.conf.d
#grub.d
#festival.scm
#emacs
#debian_version
#cupshelpers
#cups
#conf.d
#apparmor.d
#apparmor

cd /
echo "If OK execute: cvs commit -m Added"

cat <<EOF
Now get ntp configured and added to start on boot.
web files go in /var/www/VIRT-SERVER-NAME/html/
Update /etc/motd (template software/tool/local/trunk/src/etc/motd)
Update /etc/CHANGES

Before editing any config files, first do a
'cvs add' and commit the file.
EOF
