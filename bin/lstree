#!/bin/bash

fUsage()
{
    cat <<\EOF
Usage:
    lstree [-d] [-L N] [other "tree" options] [dir...]

-d - dir only
-L N - limit to N levels
-C adds:  -I 'CVS|.git|.svn|*~|tmp|*.tmp'
-T: replace '|' with tabs
-Tc: compact, replace tabs with 4 spaces

dir - default $PWD

For more options see: man tree
Note: do not use the tree's -I opton with -C

Current options used:
    -a -Q -F --dirsfirst --charset=ascii -n --noreport

EOF
    exit 1
} # fUsage

export tDefault="-a -Q -F --dirsfirst --charset=ascii -n --noreport"

export pDirOnly=""
export pCode=""
export pTab=""
export pCompact="cat"
while getopts :hdL:CTc tArg; do
    case $tArg in
        h) fUsage ;;
	d) pDirOnly="-d" ;;
	L) pLevel="-L $OPTARG" ;;
	C) pCode="-I 'CVS|.git|.svn|*~|tmp|*.tmp'" ;;
	T) pTab="s/|//g; s/   /\t/g" ;;
	c) pCompact="expand -t 4" ;;
    esac
done
shift $((OPTIND - 1))
if [ $# -ne 0 ]; then
    pOpt="$*"
fi

tree $tDefault $pDirOnly $pLevel $pCode $pOpt | sed "
    s/\`/|/g;
    s/|-- /|/g;
    s/    |/|   |/g
    s/\"//g
    $pTab
" | $pCompact
